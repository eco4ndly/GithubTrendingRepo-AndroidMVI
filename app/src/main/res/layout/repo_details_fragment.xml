<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_gray_dark"
    tools:context=".features.repodetails.ui.RepoDetailsFragment"
    >
  <View
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:background="@drawable/bg_half_sq"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintHeight_percent=".3"
      app:layout_constraintVertical_bias="0"
      />

  <LinearLayout
      android:id="@+id/ll_title_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginStart="10dp"
      android:layout_marginEnd="10dp"
      android:layout_marginTop="20dp"
      android:orientation="horizontal"
      android:gravity="center_vertical"
      >
    <TextView
        android:id="@+id/tv_repo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        tools:text="Repo Name"
        android:fontFamily="@font/roboto_bold"
        />
    <ImageView
        android:id="@+id/iv_open_repo_in_browser"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_open_in_new_24"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        />
  </LinearLayout>

  <TextView
      android:id="@+id/tv_repo_details"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/ll_title_container"
      app:layout_constraintStart_toStartOf="@id/ll_title_container"
      app:layout_constraintEnd_toEndOf="@id/ll_title_container"
      android:layout_marginTop="5dp"
      tools:text="Repo Details"
      android:textColor="@color/gray_light"
      app:layout_constraintHorizontal_bias="0"
      android:textSize="16sp"
      />
  <TextView
      android:id="@+id/tv_built_by_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/built_by"
      app:layout_constraintTop_toBottomOf="@id/tv_repo_details"
      app:layout_constraintStart_toStartOf="@id/tv_repo_details"
      android:textColor="@color/gray_light"
      android:layout_marginTop="10dp"
      android:textSize="14sp"
      android:textStyle="italic"
      />
  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/rv_built_by"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginHorizontal="14dp"
      android:layout_marginTop="6dp"
      app:layout_constraintTop_toBottomOf="@id/tv_built_by_text"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      tools:listitem="@layout/layout_built_by_item"
      app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
      />

</androidx.constraintlayout.widget.ConstraintLayout>